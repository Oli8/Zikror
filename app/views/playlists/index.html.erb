<p id="notice"><%= notice %></p>

<h1>Playlists</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @playlists.each do |playlist| %>
      <tr>
        <td><%= playlist.user.username %></td>
        <td><%= playlist.name %></td>
        <td><%= playlist.description %></td>
        <% if playlist.image_file_name %>
          <td><%= image_tag(playlist.image.url) %></td>
        <% end %>
        <td><%= link_to 'Show', playlist %></td>
        <% if playlist.user == current_user %>
          <td><%= link_to 'Edit', edit_playlist_path(playlist) %></td>
        <% end %>
        <% if playlist.user == current_user || current_user.admin %>
          <td><%= link_to 'Destroy', playlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

