<h1>Playlists</h1>

<%= form_tag('/playlists', method: 'get') do %>
  <%= label_tag(:playlist_name, 'Name:') %>
  <%= search_field_tag(:playlist_name, params[:playlist_name] || '', list: 'datas') %>
  <datalist id="datas">
    <% Playlist.pluck(:name).each do |d| %>
      <option value="<%= d %>">
    <% end %>
  </datalist>
  <%= submit_tag('search') %>
<% end %>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @playlists.each do |playlist| %>
      <tr>
        <td><%= playlist.user.username %></td>
        <td><%= playlist.name %></td>
        <td><%= playlist.description %></td>
        <% if playlist.image_file_name %>
          <td><%= image_tag(playlist.image.url) %></td>
        <% end %>
        <td><%= link_to 'Show', playlist %></td>
        <% if playlist.user == current_user %>
          <td><%= link_to 'Edit', edit_playlist_path(playlist) %></td>
        <% end %>
        <% if playlist.user == current_user || current_user.admin %>
          <td><%= link_to 'Destroy', playlist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Playlist', new_playlist_path %>
