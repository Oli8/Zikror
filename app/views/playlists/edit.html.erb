<% if @playlist.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @playlist.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <!-- Sidebar -->
  <div class="row row-edit">
    <div class="page-content-edit">
      <div class="head-edit">
        <h1 class="title-head-admin">ADMINISTRATION</h1>
        <%= render partial: "shared/user_badge", locals: {edit: true} %>
        <div class="deconnect-edit">
          <%= image_tag('logout.png') %>
          <span><%= link_to "Deconnexion", logout_path, :method => "delete" %></span>
        </div>
      </div>
      <div class="container-fluid">
        <!-- <img src="img/zikror.png" class="bg-content"> -->
        <div class="row">
          <div class="col-lg-6 col-md-6 content-page-edit col-md-offset-3">
          <h3>Modifier votre playlist<br/><%= link_to 'VOIR', @playlist %></h3>
          <%= form_for(@playlist) do |f| %>
            <%= f.text_field :name, placeholder: 'Ajouter un titre*' %>
            <%= f.text_area :description, placeholder: 'Ajouter une description' %>
            <input type="text" name="" disabled="disabled" id="value-file" class="input-text file" placeholder="Ajouter une image Ã  votre playlist">
            <div class="file-upload">
              <%= image_tag('upload.png') %>
              <%= f.file_field :image, class: 'upload' %>
            </div>
           
            <div class="block-btn-edit">
            <a href="<%= user_path(current_user) %>"><button type="button" class="btn-cancel-account">ANNULER</button></a>
            <%= f.button :VALIDER, value: "VALIDER" %>
            </div>
            <p>*Champ obligatoire </p>
          <% end %>         
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

