<h1>Songs</h1>

<%= form_tag('/songs', method: 'get') do %>
  <%= label_tag(:query, 'Title or artist:') %>
  <%= search_field_tag(:query, params[:query] || '', list: 'datas') %>
  <datalist id="datas">
    <% @datas.each do |d| %>
      <option value="<%= d %>">
    <% end %>
  </datalist>
  <%= submit_tag('search') %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Title</th>
      <th>Artist</th>
      <th>Year</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= link_to song.user.username, user_path(song.user) %></td>
        <td><%= song.title %></td>
        <td><%= song.artist %></td>
        <td><%= song.year %></td>
        <td><%= song.genre %></td>
        <td><%= link_to 'Show', song %></td>
        <% if current_user == song.user %>
          <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <% end %>
        <% if current_user.admin %>
          <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate %>

<br>

<%= link_to 'New Song', new_song_path %>
