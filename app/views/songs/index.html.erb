<h1>Songs</h1>

<table>
  <thead>
    <tr>
      <th>Id user</th>
      <th>Title</th>
      <th>Artist</th>
      <th>Year</th>
      <th>Genre</th>
      <th>Private</th>
      <th>File</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.id_user %></td>
        <td><%= song.title %></td>
        <td><%= song.artist %></td>
        <td><%= song.year %></td>
        <td><%= song.genre %></td>
        <td><%= song.private %></td>
        <td><%= song.file.url %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

