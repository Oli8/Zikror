<h1>New Song</h1>

<% if @song.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @song.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= form_for(@song) do |f| %>

  	<%= f.hidden_field :id_user, value: current_user.id %>

  	<%= f.label :title %>
  	<%= f.text_field :title, class: 'form-control' %>

  	<%= f.label :artist %>
  	<%= f.text_field :artist, class: 'form-control' %>

  	<%= f.label :year %>
  	<%= f.number_field :year, class: 'form-control' %>

  	<%= f.label :genre %>
  	<%= f.text_field :genre, class: 'form-control' %>

	<%= f.label :file %><strong>Must be mp3</strong>
  	<%= f.file_field :file, class: 'form-control' %>

  	<%= f.label :private %>
  	<%= f.check_box :private %>
	<br/><br/>
  	<%= f.submit 'Save', class: 'btn btn-primary' %>

  <% end %>
  </div>
</div>

<%= link_to 'Back', songs_path %>
